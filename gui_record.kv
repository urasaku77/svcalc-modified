#:import * gui
#:include gui.kv

<OpponentChosenPokemonPanel>
    evs_combobox: _evs_combobox
    chosenWazaListPanel: chosenWazaListPanel
    BoxLayout:
        orientation: "vertical"
        spacing:5
        BoxLayout:
            size_hint_y: 1
            BoxLayout:
                size_hint_x: None
                width: 60
                orientation: "vertical"
                IconButton:
                    icon: root.icon
                    size_hint: None, None
                    size: 60, 60
                    on_release: root.dispatch("on_click_icon")
                IconButton:
                    size_hint_y: None
                    height: 30
                    icon: root.terastype_icon
                    font_size: 14
                    on_release: root.select_terastype()
            GridLayout:
                cols: 2
                rows: 4
                spacing: 5
                ShortLabel:
                    text: "ステータス"
                DropDownButton:
                    id: _evs_combobox
                    text: root.doryoku
                    items: DORYOKU_PRESET.keys()
                    font_size: dp(12)
                    on_select_item: root.on_select_doryoku_preset(self.button_text)
                ShortLabel:
                    text: "持ち物"
                DropDownButton:
                    text: root.item if root.name != "" else ""
                    image_enable: True
                    items: root.items if root.name != "" else ""
                    on_select_item: root.item = self.button_text
                ShortLabel:
                    text: "特性"
                DropDownButton:
                    text: root.ability if root.name != "" else ""
                    items: root.abilities if root.name != "" else ""
                    on_select_item: root.ability = self.button_text
        ChosenWazaListPanel:
            id: chosenWazaListPanel
            size_hint_y: 2

<TimerLabel>:
    BoxLayout:
        orientation: "vertical"
        spacing: 15
        Label:
            text: root.minutes+":"+root.seconds
            size_hint_y: 2
            font_size: 0.6*self.height
        BoxLayout:
            size_hint_y: 1
            Button:
                text: root.state
                on_release: root.toggle()
            Button:
                text: "リセット"
                on_release: root.reset()

<TrainerInfoPanel>
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 1
            Label:
                text: 'TN'
                size_hint_x: 1
            TextInput:
                id: name
                text: ""
                size_hint_x: 5
        BoxLayout:
            size_hint_y: 1
            Label:
                text: 'ランク'
                size_hint_x: 1
            TextInput:
                id: rank
                text: ""
                size_hint_x: 5
        BoxLayout:
            size_hint_y: 5
            Label:
                text: 'メモ'
                size_hint_x: 1
            TextInput:
                id: memo
                text: ""
                size_hint_x: 5
