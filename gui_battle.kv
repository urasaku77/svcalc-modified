#:kivy 2.1.0
#:import * gui
#:import * textinput4ja

<TimerLabel>:
    BoxLayout:
        orientation: "vertical"
        spacing: 15
        Label:
            text: root.minutes+":"+root.seconds
            size_hint_y: 2
            font_size: 0.6*self.height
        BoxLayout:
            size_hint_y: 1
            Button:
                text: root.state
                on_release: root.toggle()
            Button:
                text: "リセット"
                on_release: root.reset()

<PokemonInfoPanel>
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.8
            Label:
                text:root.name
                font_size: 0.4*self.height
                size_hint_x: 3
            BoxLayout:
                size_hint_x: 5
                BoxLayout:
                    Image:
                        source: root.type1_img
                        size_hint_x: 0.2
                    Label:
                        text:root.type1
                        font_size: 0.4*self.height
                BoxLayout:
                    Image:
                        source: root.type2_img
                        size_hint_x: 0.2
                    Label:
                        text:root.type2
                        font_size: 0.4*self.height
        BoxLayout:
            size_hint_y: 1
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"HP"
                Label:
                    text:root.h
                    font_size: 0.3*self.width
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"攻撃"
                Label:
                    text:root.a
                    font_size: 0.3*self.width
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"防御"
                Label:
                    text:root.b
                    font_size: 0.3*self.width
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"特攻"
                Label:
                    text:root.c
                    font_size: 0.3*self.width
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"特防"
                Label:
                    text:root.d
                    font_size: 0.3*self.width
            BoxLayout:
                orientation: "vertical"
                Label:
                    text:"素早さ"
                Label:
                    text:root.s
                    font_size: 0.3*self.width
        BoxLayout:
            size_hint_y: 0.5
            Label:
                text:"重さ："+root.weight +"kg"
                size_hint_x: 0.5
            Label:
                text:"けたぐりの威力："+root.ketaguri
                size_hint_x: 1
            Button:
                text:"ポケ徹"
                size_hint_x: 0.5
                on_release: root.open_poketetsu()