#:kivy 2.1.0

<PartyInputPopupContent>
    orientation: "vertical"
    padding: 5
    spacing: 5
    BoxLayout:
        size_hint_y: None
        spacing: 5
        PartyIconPanel:
            id: _party
            size_hint_x: 6
            on_select: root.on_select_party(self.selected_index)
        Button:
            size_hint_x: 1
            text: "決定"
            on_release: root.dispatch("on_complete")
    PokeNameComboEdit:
        id: _input
        size_hint_y: None
        height: 30
        hint_text: "1匹目のポケモン名を入力"
        on_confirm: root.on_input_name(self.text)
    Label:

<SpeedCheckPopup>
    size_hint: (None, 0.9)
    width: 600
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Image:
                    allow_stretch: True
                    source: root.players_pokemon.icon if root.players_pokemon is not None else ""
                Label:
                    text: root.players_pokemon.name if root.players_pokemon is not None else ""
            Label:
                text: str(root.results[0])
                font_size: '40'
                size_hint: 1, 2
                bold: True
            Label:
                text: str(root.syuzokus[0]) if root.players_pokemon is not None else ""
            BoxLayout:
                size_hint: 1, 0.4
                TextInput:
                    id: player_kotai
                    text: "31"
                    on_text: root.set_kotai(0, self.text)
                Button:
                    text: "31"
                    on_release: root.set_kotai(0, "31")
                Button:
                    text: "0"
                    on_release: root.set_kotai(0, "0")
            BoxLayout:
                size_hint: 1, 0.4
                TextInput:
                    id: player_doryoku
                    text: "252"
                    on_text: root.set_doryoku(0, self.text)
                Button:
                    text: "252"
                    on_release: root.set_doryoku(0, "252")
                Button:
                    text: "0"
                    on_release: root.set_doryoku(0, "0")
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_seikaku(0, 0.9)
                    active: root.player_seikaku_down
                Label:
                    text: "0.9"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_seikaku(0, 1.1)
                    active: root.player_seikaku_up
                Label:
                    text: "1.1"
            BoxLayout:
                size_hint: 1, 0.4
                Button:
                    text: "-1"
                    on_release: root.set_rank(0, False)
                Label:
                    id: player_rank
                    text: root.rank[root.ranks[0]]
                Button:
                    text: "+1"
                    on_release: root.set_rank(0, True)
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(0, 0.5)
                Label:
                    text: "0.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(0, 1.5)
                Label:
                    text: "1.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(0, 2.0)
                Label:
                    text: "2.0"
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(0, 0.5)
                Label:
                    text: "0.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(0, 1.5)
                    active: root.player_scarf
                Label:
                    text: "1.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(0, 2.0)
                Label:
                    text: "2.0"
            CheckBox:
                on_press: root.set_wind(0)
            CheckBox:
                on_press: root.set_bind(0)
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "実数値"
            Label:
                text: root.compare
                font_size: '25'
                size_hint: 1, 2
            Label:
                text: "種族値"
            Label:
                text: "個体値"
                size_hint: 1, 0.4
            Label:
                text: "努力値"
                size_hint: 1, 0.4
            Label:
                text: "性格"
            Label:
                text: "ランク"
                size_hint: 1, 0.4
            Label:
                text: "特性"
            Label:
                text: "道具"
            Label:
                text: "おいかぜ"
            Label:
                text: "まひ"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Image:
                    allow_stretch: True
                    source: root.opponent_pokemon.icon if root.opponent_pokemon is not None else ""
                Label:
                    text: root.opponent_pokemon.name if root.opponent_pokemon is not None else ""
            Label:
                text: str(root.results[1])
                font_size: '40'
                size_hint: 1, 2
                bold: True
            Label:
                text: str(root.syuzokus[1]) if root.opponent_pokemon is not None else ""
            BoxLayout:
                size_hint: 1, 0.4
                TextInput:
                    id: opponent_kotai
                    text: "31"
                    on_text: root.set_kotai(1, self.text)
                Button:
                    text: "31"
                    on_release: root.set_kotai(1, "31")
                Button:
                    text: "0"
                    on_release: root.set_kotai(1, "0")
            BoxLayout:
                size_hint: 1, 0.4
                TextInput:
                    id: opponent_doryoku
                    text: "252"
                    on_text: root.set_doryoku(1, self.text)
                Button:
                    text: "252"
                    on_release: root.set_doryoku(1, "252")
                Button:
                    text: "0"
                    on_release: root.set_doryoku(1, "0")
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_seikaku(1, 0.9)
                Label:
                    text: "0.9"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_seikaku(1, 1.1)
                Label:
                    text: "1.1"
            BoxLayout:
                size_hint: 1, 0.4
                Button:
                    text: "-1"
                    on_release: root.set_rank(1, False)
                Label:
                    id: opponent_rank
                    text: root.rank[root.ranks[1]]
                Button:
                    text: "+1"
                    on_release: root.set_rank(1, True)
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(1, 0.5)
                Label:
                    text: "0.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(1, 1.5)
                Label:
                    text: "1.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_ability(1, 2.0)
                Label:
                    text: "2.0"
            BoxLayout:
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(1, 0.5)
                Label:
                    text: "0.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(1, 1.5)
                Label:
                    text: "1.5"
                CheckBox:
                    group: 'radio'
                    on_press: root.set_item(1, 2.0)
                Label:
                    text: "2.0"
            CheckBox:
                on_press: root.set_wind(1)
            CheckBox:
                on_press: root.set_bind(1)
<PartyRegisterPopupContent>
    PokeNameComboEdit:
        id: _input
        size_hint_x: 5 
        size_hint_y: None
        height: 30
        hint_text: "ポケモン名を入力"
        on_confirm: root.on_input_name(self.text)
    Button:
        size_hint_x: 1
        size_hint_y: None
        height: 30
        font_size: 12
        text: "クリア"
        on_release: root.clear()
<CsvChooserPopup>
    FileChooserListView:
        rootpath: 'party/csv'
        filters: ['*.csv']
        on_selection: root.select(self.selection[0])