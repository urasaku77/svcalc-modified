#:kivy 2.1.0
#:import * page_battle
#:include page_battle.kv
#:import * page_party
#:include page_party.kv

RootWidget:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: (0.15, 0.15, 0.15)
        Rectangle:
            size: self.size
            pos: self.pos
    pageBattleWidget: _pageBattleWidget
    pagePartyWidget: _pagePartyWidget
    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: "パーティ"
            PagePartyWidget:
                id: _pagePartyWidget
        TabbedPanelItem:
            text: "対戦"
            PageBattleWidget:
                id: _pageBattleWidget
        TabbedPanelItem:
            text: "分析"
            Label:
                text: "工事中"